# AIAS Platform Environment Variables
# Copy this file to .env.local and fill in your values

# Core Configuration
NODE_ENV=development
VITE_APP_URL=http://localhost:3000
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/aias_dev
DIRECT_URL=postgresql://user:password@localhost:5432/aias_dev

# Supabase
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Stripe (Development)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# AI Providers
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=AIza...

# Email Services
RESEND_API_KEY=re_...
POSTMARK_API_TOKEN=...

# Security
ENCRYPTION_KEY=your-32-char-encryption-key
JWT_SECRET=your-jwt-secret

# Monitoring
SENTRY_DSN=https://...@sentry.io/...
SENTRY_ORG=your-org
SENTRY_PROJECT=aias-platform

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# File Storage
STORAGE_BUCKET=aias-storage
STORAGE_REGION=us-east-1

# Analytics
GOOGLE_ANALYTICS_ID=GA-...
MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags
FEATURE_FLAGS_ENABLED=true
AI_AGENTS_ENABLED=true
WORKFLOWS_ENABLED=true
MARKETPLACE_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,https://aias-platform.com

# Session
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=86400000

# Webhook URLs
WEBHOOK_BASE_URL=https://your-domain.com
STRIPE_WEBHOOK_URL=https://your-domain.com/api/webhooks/stripe

# Development
DEBUG=aias:*
HOT_RELOAD=true