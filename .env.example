# ============================================
# AIAS Platform Environment Variables
# ============================================
# Copy this file to .env.local for local development
# For production, set these in:
# - Vercel: Dashboard → Settings → Environment Variables
# - Supabase: Dashboard → Settings → API
# - GitHub Actions: Repository → Settings → Secrets and variables → Actions

# ============================================
# Application Configuration
# ============================================
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_SITE_URL=https://aiautomatedsystems.ca
NEXTAUTH_URL=https://aiautomatedsystems.ca
NEXTAUTH_SECRET=your-nextauth-secret-here
LOG_LEVEL=info

# ============================================
# Supabase Configuration
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here
SUPABASE_ACCESS_TOKEN=your-access-token-here
SUPABASE_PROJECT_REF=your-project-ref-here

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://user:password@host:port/database
DIRECT_URL=postgresql://user:password@host:port/database

# ============================================
# Email Configuration
# ============================================
EMAIL_FROM=inquiries@aiautomatedsystems.ca
EMAIL_FROM_NAME=AI Automated Systems
EMAIL_REPLY_TO=inquiries@aiautomatedsystems.ca
SUPPORT_EMAIL=support@aiautomatedsystems.ca
INQUIRIES_EMAIL=inquiries@aiautomatedsystems.ca

# Email Provider (choose one)
# Option 1: Resend (Recommended)
RESEND_API_KEY=re_your-resend-api-key-here

# Option 2: SendGrid
# SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# Option 3: SMTP
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password
# SMTP_SECURE=false

# ============================================
# Payment Configuration
# ============================================
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================
# OAuth Configuration (Optional)
# ============================================
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# Storage Configuration
# ============================================
NEXT_PUBLIC_UPLOAD_BUCKET=public
SIGNING_SECRET=your-signing-secret-here

# ============================================
# Deployment Configuration
# ============================================
VERCEL_TOKEN=your-vercel-token-here
VERCEL_ORG_ID=your-vercel-org-id
VERCEL_PROJECT_ID=your-vercel-project-id

# ============================================
# Email Cadence Configuration
# ============================================
# Enable/disable email cadence features
EMAIL_CADENCE_ENABLED=true
EMAIL_CADENCE_SCHEDULE_HOUR=9
EMAIL_CADENCE_SCHEDULE_TIMEZONE=UTC

# Email tracking
EMAIL_TRACKING_ENABLED=true
EMAIL_ANALYTICS_ENABLED=true

# ============================================
# Content Marketing Configuration
# ============================================
# Blog settings
BLOG_ENABLED=true
BLOG_POSTS_PER_PAGE=10

# Social media (Optional)
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ============================================
# Content Studio Configuration
# ============================================
# Token for Content Studio authentication (non-dev editor)
# Generate a secure random token (e.g., using: openssl rand -hex 32)
CONTENT_STUDIO_TOKEN=your-secure-random-token-here

# ============================================
# Cron Jobs Configuration
# ============================================
# Secret for protecting cron endpoints
# Generate a secure random token (e.g., using: openssl rand -hex 32)
CRON_SECRET=your-cron-secret-here

# ============================================
# Analytics Configuration
# ============================================
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_VERIFICATION=your-google-verification-code
NEXT_PUBLIC_YANDEX_VERIFICATION=your-yandex-verification-code
NEXT_PUBLIC_YAHOO_VERIFICATION=your-yahoo-verification-code

# ============================================
# Feature Flags
# ============================================
NEXT_PUBLIC_FEATURE_EMAIL_CADENCE=true
NEXT_PUBLIC_FEATURE_CONTENT_MARKETING=true
NEXT_PUBLIC_FEATURE_SOCIAL_MEDIA=true
NEXT_PUBLIC_FEATURE_ANALYTICS=true

# ============================================
# Security
# ============================================
# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# Development Only
# ============================================
# Only set these in local .env.local, never commit
# NODE_ENV=development
# DEBUG=true
